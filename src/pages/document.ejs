<!doctype html>
<html>

<head>
    <meta charset="utf-8" />
    <title>Dynamics 365</title>
    <script src="<%= context.config.publicPath %>wave-add-in-kit.js" type="text/javascript"></script>
</head>

<body>
    <div id="root"></div>
    <script>
        /**
         * 监听窗口初始化完成
         * 打开默认窗口
         */
        pluginSDK.eventEmitter.once('onInitPluginWindowOk', function ({ preParamObject, pluginPath }) {
            pluginSDK.setDefaultWindow({
                width: 482,
                height: 580,
                center: true,
                show: false,
            })
            console.log('onInitPluginWindowOk', preParamObject, pluginPath);
            sessionStorage.setItem('pluginPath', pluginPath);
            if (preParamObject) sessionStorage.setItem('preParamObject', JSON.stringify(preParamObject))
            window.location.hash = '#/login'
        })
    </script>
</body>

</html>